<UserControl x:Class="Checkers.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.MVVM.View"
             xmlns:vm="clr-namespace:Checkers.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#D0D0D0"
             >
    <Grid>
        <Border Width="200" Height="200" Background="White">
            <StackPanel>
                <TextBlock Text="Checkers" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Button Content="New Game" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,0,0,10" Command="{Binding NavigateBoardCommand}"/>
                <Button Content="Load Game" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,0,0,10" Command="{Binding LoadGameCommand}"/>
                <Button Content="Statistics" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,0,0,10" Command="{Binding StatisticsCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
